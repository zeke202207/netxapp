<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NetX.AppCore.App"
             xmlns:common="clr-namespace:NetX.AppCore;assembly=NetX.AppCore"
             xmlns:sty="using:FluentAvalonia.Styling">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.DataTemplates>
    <common:ViewLocator />
  </Application.DataTemplates>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- add resource dictionary -->
         <ResourceInclude Source="avares://NetX.AppCore/Styling/Resources.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
  
    <Application.Styles>
<!-- 
        <FluentTheme />
      <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
      <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
-->
      <sty:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
      <StyleInclude Source="avares://NetX.AppCore/Styling/ControlsGalleryStyles.axaml" />
      <StyleInclude Source="avares://NetX.AppCore/Styling/AppCoreStyle.axaml"/>
    </Application.Styles>
</Application>
