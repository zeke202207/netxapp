<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
                 xmlns:theme="clr-namespace:SukiUI.Theme;assembly=SukiUI"
                 xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
                 x:Class="NetX.RBAC.LoginWindow"
        
                 mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="400"
                 Width="650"
                 Height="400"
                 CanMove="True"
                 CanResize="False"
                 IsTitleBarVisible="False">
    <Grid Margin="1" Background="AliceBlue">
      <StackPanel 
        HorizontalAlignment="Right" 
        Margin="0,0,0,-10">
        <suki:GlassCard Width="300" Margin="25,25,25,-25">
          <suki:BusyArea Name="BusySignIn"
                         BusyText="登录中..."
                         IsBusy="{Binding IsLoggingIn}">
            <StackPanel>
              <avalonia:MaterialIcon Width="30"
                                     Height="30"
                                     Margin="10"
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource SukiPrimaryColor}"
                                     Kind="LoginVariant" />
              <TextBlock Margin="6,0,0,3"
                         FontWeight="DemiBold"
                         Text="用户名" />
              <TextBox theme:TextBoxExtensions.Prefix="" 
                       Watermark="用户名" 
                       MaxLength="10"
                       Text="{Binding UserName}" />
              <TextBlock Margin="6,8,0,3"
                         FontWeight="DemiBold"
                         Text="密码" />
              <TextBox Name="PasswordTextBox"
                       theme:TextBoxExtensions.AddDeleteButton="False"
                       Watermark="密码"
                       PasswordChar="*"
                       MaxLength="10"
                       Text="{Binding Password}"/>
              <TextBlock Margin="6,8,0,3"
                        FontWeight="DemiBold"
                        Text="验证码" />
              <StackPanel Orientation="Horizontal"
                  Margin="0,0,0,25">
                <TextBox
                  Width="100"
                  Watermark="验证码"
                  MaxLength="5"
                  Text="{Binding Captcha}" />
                <Border Margin="10,0,0,0" Height="35">
                  <Image Stretch="Uniform" Source="{Binding CaptchaImage}" Tapped="Captcha_Tapped"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </suki:BusyArea>
        </suki:GlassCard>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
          <Button Name="ButtonSignIn"
                  Width="90"
                  Height="40"
                  Margin="0,0,0,7"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Classes="Flat Rounded Accent"
                  Command="{Binding LoginCommand}"
                  FontWeight="DemiBold">
            登录
          </Button>
          <Button
            Width="90"
            Height="40"
            Margin="20,0,0,7"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontWeight="DemiBold"
            Classes="Flat Rounded"
            Command="{Binding LogoutCommand}">
            退出
          </Button>
        </StackPanel>
      </StackPanel>
    </Grid>
</suki:SukiWindow>
