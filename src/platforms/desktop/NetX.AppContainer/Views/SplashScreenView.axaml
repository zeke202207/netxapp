<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:vm="using:NetX.AppContainer.ViewModels"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:views="clr-namespace:NetX.AppContainer.Views"
                 xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
                 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                 x:Class="NetX.AppContainer.Views.SplashScreenView"
                 x:DataType="vm:SplashScreenViewModel"
                 Icon="/Assets/avalonia-logo.ico"
                 Title="NetX.AppContainer">
  <Grid Background="{Binding BackgroundBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- 主内容区域 -->
    <DockPanel Grid.Row="0">
      <!-- 这里可以放置其他控件，如标题、图标等 -->
    </DockPanel>

    <!-- 底部进度条和消息 -->
    <StackPanel Grid.Row="1" Orientation="Vertical">
      <TextBlock TextAlignment="Center">
        <Run FontSize="{Binding MessageSize}" Foreground="{Binding MessageColor}" Text="{Binding Message}" />
      </TextBlock>
      <ProgressBar Classes="Accent" IsIndeterminate="True" HorizontalAlignment="Stretch" />
    </StackPanel>
  </Grid>
</suki:SukiWindow>