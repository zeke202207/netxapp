<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NetX.AppContainer.App"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:common="clr-namespace:NetX.AppContainer;assembly=NetX.AppContainer"
             xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.DataTemplates>
    <common:ViewLocator />
  </Application.DataTemplates>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- add resource dictionary -->
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        <sukiUi:SukiTheme ThemeColor="Red" />
      <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
      <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

      <!-- add style -->
      <StyleInclude Source="avares://NetX.AppContainer/Styles/TextStyles.axaml"/>
      <avalonia:MaterialIconStyles/>
    </Application.Styles>
</Application>
